<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-black"
        android:text="NOME"
        android:textSize="24dp"
        android:textStyle="italic"
        android:id="@+id/detalhe_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:id="@+id/detalhe_imagem"
        app:layout_constraintTop_toBottomOf="@+id/detalhe_nome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Winner:"
        android:id="@+id/detalhe_titulo_winner"
        app:layout_constraintTop_toBottomOf="@id/detalhe_imagem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/detalhe_winner"
        app:layout_constraintTop_toBottomOf="@id/detalhe_imagem"
        app:layout_constraintStart_toEndOf="@id/detalhe_titulo_winner"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Miss:"
        android:id="@+id/detalhe_titulo_miss"
        app:layout_constraintTop_toBottomOf="@id/detalhe_titulo_winner"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:id="@+id/detalhe_miss"
        app:layout_constraintTop_toBottomOf="@id/detalhe_winner"
        app:layout_constraintStart_toEndOf="@id/detalhe_titulo_miss"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        android:id="@+id/detalhe_titulo_descricao"
        app:layout_constraintTop_toBottomOf="@id/detalhe_titulo_miss"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="descrição"
        android:id="@+id/detalhe_descricao"
        app:layout_constraintTop_toBottomOf="@id/detalhe_titulo_descricao"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>